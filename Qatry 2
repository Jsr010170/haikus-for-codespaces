import 'package:flutter/material.dart';
import 'package:flutter/services.dart';
import 'dart:math' as math;

// ==========================================
// 1. أدوات النظام والأيقونة المعدلة
// ==========================================

class TentsIcon extends StatelessWidget {
  final double size;

  const TentsIcon({super.key, this.size = 24});

  @override
  Widget build(BuildContext context) {
    return CustomPaint(
      size: Size(size, size),
      painter: _TentsPainter(),
    );
  }
}

class _TentsPainter extends CustomPainter {
  @override
  void paint(Canvas canvas, Size size) {
    // 1. رسم الشمس (قرص دافئ) - في الخلفية
    final Paint sunPaint = Paint()
      ..color = const Color(0xFFFFB74D) // برتقالي دافئ
      ..style = PaintingStyle.fill;
      
    canvas.drawCircle(
      Offset(size.width * 0.85, size.height * 0.25), 
      size.width * 0.18, 
      sunPaint
    );

    // 2. إعدادات رسم الخيام
    final Paint tentPaint = Paint()
      ..color = Colors.teal
      ..style = PaintingStyle.fill;

    final Paint borderPaint = Paint()
      ..color = Colors.white
      ..style = PaintingStyle.stroke
      ..strokeWidth = 1.5;

    // 3. الخيمة الكبيرة (في الخلف)
    Path bigTent = Path();
    bigTent.moveTo(size.width * 0.65, size.height * 0.15);
    bigTent.lineTo(size.width * 1.0, size.height * 0.9);
    bigTent.lineTo(size.width * 0.3, size.height * 0.9);
    bigTent.close();
    
    canvas.drawPath(bigTent, tentPaint..color = Colors.teal.shade700.withOpacity(0.9));
    canvas.drawPath(bigTent, borderPaint);

    // 4. رسم الطفل (بين الخيمتين)
    final Paint childPaint = Paint()
      ..color = Colors.grey 
      ..style = PaintingStyle.fill;
    
    canvas.drawCircle(
      Offset(size.width * 0.53, size.height * 0.68), 
      size.width * 0.08, 
      childPaint
    );
    
    Path childBody = Path();
    childBody.moveTo(size.width * 0.53, size.height * 0.70);
    childBody.lineTo(size.width * 0.62, size.height * 0.9);
    childBody.lineTo(size.width * 0.44, size.height * 0.9);
    childBody.close();
    canvas.drawPath(childBody, childPaint);

    // 5. الخيمة الصغيرة (في الأمام)
    tentPaint.color = Colors.teal; 
    
    Path smallTent = Path();
    smallTent.moveTo(size.width * 0.3, size.height * 0.45);
    smallTent.lineTo(size.width * 0.6, size.height * 0.9);
    smallTent.lineTo(size.width * 0.0, size.height * 0.9);
    smallTent.close();

    canvas.drawPath(smallTent, tentPaint);
    canvas.drawPath(smallTent, borderPaint);
  }

  @override
  bool shouldRepaint(covariant CustomPainter oldDelegate) => false;
}

class InteractionManager {
  static void playClick() {
    SystemSound.play(SystemSoundType.click);
    HapticFeedback.lightImpact();
  }

  static void playError() {
    HapticFeedback.heavyImpact();
  }

  static void playSuccess() {
    HapticFeedback.mediumImpact();
  }
}

class ShakeWidget extends StatefulWidget {
  final Widget child;
  final ShakeController controller;
  const ShakeWidget({super.key, required this.child, required this.controller});
  @override
  State<ShakeWidget> createState() => _ShakeWidgetState();
}

class ShakeController {
  late void Function() shake;
}

class _ShakeWidgetState extends State<ShakeWidget> with SingleTickerProviderStateMixin {
  late AnimationController _controller;
  late Animation<double> _offsetAnimation;

  @override
  void initState() {
    super.initState();
    widget.controller.shake = _shake;
    _controller = AnimationController(duration: const Duration(milliseconds: 500), vsync: this);
    _offsetAnimation = Tween<double>(begin: 0.0, end: 24.0)
        .chain(CurveTween(curve: Curves.elasticIn))
        .animate(_controller);
  }

  void _shake() {
    _controller.forward(from: 0.0);
  }

  @override
  void dispose() {
    _controller.dispose();
    super.dispose();
  }

  @override
  Widget build(BuildContext context) {
    return AnimatedBuilder(
      animation: _offsetAnimation,
      builder: (context, child) {
        return Transform.translate(
          offset: Offset(math.sin(_controller.value * math.pi * 4) * 10, 0),
          child: child,
        );
      },
      child: widget.child,
    );
  }
}

// ==========================================
// 2. نماذج البيانات
// ==========================================

enum Gender { male, female }

class FamilyMember {
  final String name;
  final int age;
  final String relation;
  final Gender gender;
  final String? idNumber;
  final String? phoneNumber;
  final String bloodType;
  final List<String> chronicDiseases;

  FamilyMember({
    required this.name,
    required this.age,
    required this.relation,
    required this.gender,
    this.idNumber,
    this.phoneNumber,
    required this.bloodType,
    this.chronicDiseases = const [],
  });
}

class Family {
  final String id;
  final String headName;
  final String address;
  final String headPhone;
  final List<FamilyMember> members;

  Family({
    required this.id,
    required this.headName,
    required this.address,
    required this.headPhone,
    required this.members,
  });

  FamilyMember? get wife {
    try {
      return members.firstWhere((m) => m.relation == 'زوجة');
    } catch (e) {
      return null;
    }
  }

  int get maleKidsCount => members.where((m) => m.gender == Gender.male && m.relation != 'رب الأسرة').length;
  int get femaleKidsCount => members.where((m) => m.gender == Gender.female && m.relation != 'زوجة').length;
}

// ==========================================
// 3. بيانات تجريبية
// ==========================================
